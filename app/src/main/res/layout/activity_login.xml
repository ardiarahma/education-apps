<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ardiarahma.education.activities.LoginActivity"
    android:background="@color/default_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/bgImage"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_bg_logreg"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/default_login_frame"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="13dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingTop="7dp"
            android:textColorHint="#8d16496e">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/default_form"
                android:ems="14"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColor="#8d16496e"
                android:textSize="15dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilUsername"
            android:textColorHint="#8d16496e"
            android:paddingTop="7dp"
            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_form"
                android:ems="14"
                android:paddingLeft="15dp"
                android:hint="Password"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:textColor="#8d16496e"
                />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:id="@+id/pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tilPassword"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/check_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tampilkan password"
                android:textColor="#ad16496e" />
            <TextView
                android:id="@+id/forgetPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:layout_weight="1"
                android:text="Lupa password?"
                android:textColor="#ad16496e"
                android:textSize="13dp"
                android:onClick="forget"/>
        </LinearLayout>


        <Button
            android:id="@+id/masuk"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@+id/pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/default_button"
            android:ems="7"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/masuk"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/cuap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Belum punya akun? "
                android:textColor="#16496E"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/daftar"
                android:onClick="daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar disini!"
                android:textColor="#ad16496e"
                android:textSize="13dp"
                tools:ignore="OnClick"
                />
        </LinearLayout>




    </RelativeLayout>


</RelativeLayout>
