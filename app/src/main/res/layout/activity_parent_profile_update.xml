<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/default_bg_logreg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/default_color"
        app:popupTheme="@style/AppTheme.PopupOverlay" >

        <ImageButton
            android:id="@+id/toolbar_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_back"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="Edit Profil"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/profilframe"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/default_login_frame">


                <TextView
                    android:id="@+id/title_ortu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imgOrtu"
                    android:layout_toEndOf="@+id/imgOrtu"
                    android:layout_toRightOf="@+id/imgOrtu"
                    android:layout_marginLeft="5dp"
                    android:gravity="start"
                    android:text="Data Orang Tua"
                    android:textColor="#16496e"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imgOrtu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/namaOrtu"
                    android:layout_alignLeft="@+id/namaOrtu"
                    android:layout_alignStart="@+id/namaOrtu"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/user_girl" />

                <EditText
                    android:id="@+id/namaOrtu"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_above="@+id/usernameOrtu"
                    android:layout_alignLeft="@+id/usernameOrtu"
                    android:layout_alignStart="@+id/usernameOrtu"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/default_form"
                    android:ems="14"
                    android:hint="Nama Orang Tua"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="17dp"
                    android:textColor="#8d16496e"
                    android:textColorHint="#8d16496e"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/usernameOrtu"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/default_form"
                    android:ems="14"
                    android:hint="Username Orang Tua"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="17dp"
                    android:textColor="#8d16496e"
                    android:textColorHint="#8d16496e"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/emailOrtu"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/usernameOrtu"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/default_form"
                    android:ems="14"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="17dp"
                    android:textColorHint="#8d16496e"
                    android:textSize="15dp"
                    android:textColor="#8d16496e"/>



            </RelativeLayout>

            <Button
                android:id="@+id/simpan_profile"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@+id/profilframe"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/default_button"
                android:ems="7"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="#ffffff"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

