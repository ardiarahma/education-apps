<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ardiarahma.education.activities.RegisterParentActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/bgImage"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_bg_logreg"/>


    <RelativeLayout
        android:id="@+id/regisOrtu"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/default_login_frame">


        <TextView
            android:id="@+id/title_ortu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgOrtu"
            android:layout_toEndOf="@+id/imgOrtu"
            android:layout_toRightOf="@+id/imgOrtu"
            android:layout_marginLeft="5dp"
            android:gravity="start"
            android:text="Data Orang Tua"
            android:textColor="#16496e"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgOrtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tilNamaOrtu"
            android:layout_alignLeft="@+id/tilNamaOrtu"
            android:layout_alignStart="@+id/tilNamaOrtu"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/user_girl" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilNamaOrtu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textColorHint="#8d16496e">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/namaOrtu"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_above="@+id/usernameOrtu"
                android:layout_alignLeft="@+id/usernameOrtu"
                android:layout_alignStart="@+id/usernameOrtu"
                android:layout_marginBottom="5dp"
                android:background="@drawable/default_form"
                android:ems="14"
                android:hint="Nama Orang Tua"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColor="#8d16496e"
                android:textColorHint="#8d16496e"
                android:textSize="15dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilUsernameOrtu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textColorHint="#8d16496e"
            android:layout_below="@+id/tilNamaOrtu">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/usernameOrtu"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/default_form"
                android:ems="14"
                android:hint="Username Orang Tua"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColor="#8d16496e"
                android:textColorHint="#8d16496e"
                android:textSize="15dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilEmailOrtu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textColorHint="#8d16496e"
            android:layout_below="@+id/tilUsernameOrtu">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/emailOrtu"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/usernameOrtu"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_form"
                android:ems="14"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColorHint="#8d16496e"
                android:textSize="15dp"
                android:textColor="#8d16496e"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPasswordOrtu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textColorHint="#8d16496e"
            android:layout_below="@+id/tilEmailOrtu">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/passwordOrtu"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/emailOrtu"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_form"
                android:ems="14"
                android:paddingLeft="15dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#8d16496e"
                android:textSize="15dp"
                android:textColor="#8d16496e"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tampilkan password"
            android:textColor="#ad16496e"
            android:layout_below="@id/tilPasswordOrtu"
            android:textColorHint="@color/default_color"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/daftar_ortu_btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/regisOrtu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_button"
        android:ems="7"
        android:text="Daftar"
        android:textAllCaps="false"
        android:textColor="#ffffff"/>

</RelativeLayout>
